{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3
    },
    "genre": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "minimum": 1
    },
    "count": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": [
    "title",
    "genre",
    "price",
    "count"
  ]
}
